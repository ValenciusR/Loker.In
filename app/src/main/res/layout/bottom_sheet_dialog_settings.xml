<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/blue"
    android:paddingHorizontal="20sp"
    android:paddingVertical="40sp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="50sp"
        android:layout_height="5sp"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose what to do with your profile"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_marginTop="10sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings_editPersonalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Personal Infromation"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/shape_rounded"
        android:layout_marginTop="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings_addJobsToPortofolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Jobs to Portofolio"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/shape_rounded"
        android:layout_marginTop="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings_logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:backgroundTint="@null"
        android:background="@drawable/rounded_red_button"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="20sp"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>