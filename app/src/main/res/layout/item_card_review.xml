<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106sp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    android:layout_marginTop="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profilePicture_rvReview"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/default_no_profile_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_rvReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40sp">

                        <RatingBar
                            android:id="@+id/rb_rating_rvReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stepSize="0.5"
                            android:scaleY="0.5"
                            android:scaleX="0.5"
                            android:translationY="3sp"
                            android:transformPivotX="230sp"/>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_review_rvReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pekerja berperilaku baik, hasil pekerjaan bagus dan berkualitas"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:layout_gravity="bottom"/>
        </LinearLayout>



</LinearLayout>