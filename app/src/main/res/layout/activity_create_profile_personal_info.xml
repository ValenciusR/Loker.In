<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1977F3"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tentang Kamu"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Ayo kita buat biografi!"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Label for Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nama"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/input_name_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black" />

    <!-- Label for Phone Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nomor Telefon"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/input_phone_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/black" />

    <!-- Label for Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lokasi"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/input_location_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Label for Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Umur"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/input_age_personalInfoPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Label for Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Gender"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                app:endIconTint="@color/black"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                android:padding="1dp"
                android:layout_margin="0dp"
                >
                
                <AutoCompleteTextView
                    android:id="@+id/input_gender_personalInfoPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:background="@drawable/shape_rounded"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:gravity="center_vertical"
                    />
            </com.google.android.material.textfield.TextInputLayout>




            <!--            <EditText-->
            <!--                android:id="@+id/input_gender_personalInfoPage"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:inputType="textPersonName"-->
            <!--                android:padding="10dp"-->
            <!--                android:background="@drawable/shape_rounded"-->
            <!--                android:fontFamily="@font/poppins_regular"/>-->


        </LinearLayout>
    </LinearLayout>


    <!--    &lt;!&ndash; Label for About Me &ndash;&gt;-->
    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="About me"-->
    <!--        android:textSize="14sp"-->
    <!--        android:textColor="#FFFFFF"-->
    <!--        android:layout_below="@id/input_age"-->
    <!--        android:layout_marginBottom="4dp" />-->

    <!--    <EditText-->
    <!--        android:id="@+id/input_about_me"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="103dp"-->
    <!--        android:layout_below="@id/input_age"-->
    <!--        android:layout_marginBottom="8dp"-->
    <!--        android:background="@drawable/shape_rounded"-->
    <!--        android:inputType="textMultiLine" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_personalInfoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_rounded"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:text="Lanjut"
            android:textColor="#1977F3" />
    </LinearLayout>

</LinearLayout>