<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#1977F3"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About You"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Create your biography"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium"/>

    <!-- Label for Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/input_name_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"/>

    <!-- Label for Phone Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:textColor="@color/black"
        android:id="@+id/input_phone_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"/>

    <!-- Label for Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:textColor="@color/black"
        android:id="@+id/input_location_personalInfoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="@font/poppins_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Label for Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/input_age_personalInfoPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/shape_rounded"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- Label for Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/input_gender_personalInfoPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/shape_rounded"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </LinearLayout>

    <!--    &lt;!&ndash; Label for About Me &ndash;&gt;-->
