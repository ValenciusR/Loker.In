<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfile_PersonalInfo"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Kamu"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="32sp"
            android:layout_marginBottom="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"/>
        <EditText
            android:id="@+id/et_name_createProfilePersonalInfoPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_nameError_createProfilePersonalInfoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#F31919"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"/>
        <EditText
            android:id="@+id/et_phone_createProfilePersonalInfoPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded"
            android:fontFamily="@font/poppins_regular"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_phoneError_createProfilePersonalInfoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#F31919"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"/>

        <AutoCompleteTextView
            android:id="@+id/et_location_createProfilePersonalInfoPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_locationError_createProfilePersonalInfoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#F31919"
            android:layout_marginBottom="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umur"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"/>
                <EditText
                    android:id="@+id/et_age_createProfilePersonalInfoPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_ageError_createProfilePersonalInfoPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#F31919"
                    android:layout_marginBottom="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="20sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"/>
                <AutoCompleteTextView
                    android:id="@+id/et_gender_createProfilePersonalInfoPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_genderError_createProfilePersonalInfoPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#F31919"
                    android:layout_marginBottom="20sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_next_createProfilePersonalInfoPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_rounded"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:text="Lanjut"
                android:textColor="#1977F3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>