<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#1977F3"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back_editProfilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_button_back"
            android:clickable="true"
            android:layout_marginHorizontal="20sp"/>
        <TextView
            android:id="@+id/tv_editProfile_editProfilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingTop="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="20sp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile1_editProfilePelangganPage"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_no_picture_default"
                app:shapeAppearanceOverlay="@style/roundedProfileImage"/>
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile2_editProfilePelangganPage"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="#000000"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedProfileImage"
            android:src="@drawable/icon_no_picture_default" />

        <TextView
            android:id="@+id/tv_profile2_editProfilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change profile"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/whitebg"
            android:textSize="12sp"
            android:gravity="center"/>
    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:paddingHorizontal="20sp">

        <!-- Label for Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            android:layout_marginBottom="20sp">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/et_name_editProfilePelangganPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Label for Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            android:layout_marginBottom="20sp">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/et_phone_editProfilePelangganPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Label for Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            android:layout_marginBottom="20sp">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/et_location_editProfilePelangganPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Label for Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            android:layout_marginBottom="20sp">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/et_email_editProfilePelangganPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_saveChanges_editProfilePelangganPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@null"
            android:background="@drawable/shape_blue_rounded"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
</LinearLayout>