<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PekerjaChatFragment">

    <LinearLayout
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue_square">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_rounded_blue_border"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:elevation="4dp" >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_search_blue"
                android:contentDescription="Search Icon"
                />

            <EditText
                android:id="@+id/et_searchBar_PekerjaChatFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:hint="Cari Chat"
                android:textColor="#000000"
                android:textColorHint="#66202124"
                android:fontFamily="@font/poppins_medium"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/toolbar_search"
        android:id="@+id/rv_chat_pekerja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>