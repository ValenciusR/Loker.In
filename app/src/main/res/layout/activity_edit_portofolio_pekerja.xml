<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_submain"
            layout="@layout/toolbar_submain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue_square">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_rounded_blue_border"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="20sp"
                android:padding="8sp"
                android:elevation="4sp">

                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_search"
                    android:contentDescription="Search Icon"/>

                <EditText
                    android:id="@+id/et_searchJob_editPortofolioPekerjaPage"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8sp"
                    android:background="@null"
                    android:hint="Search"
                    android:textColor="#000000"
                    android:textColorHint="#66202124"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginVertical="20sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Jobs to Portofolio"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_jobs_editPortofolioPelangganPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16sp"/>
    </LinearLayout>

</ScrollView>