<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="390sp"
android:layout_height="270sp"
android:elevation="20sp"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="20sp"
android:layout_marginLeft="10sp"
android:layout_marginBottom="20sp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_rvPortofolio"
        android:layout_width="match_parent"
        android:layout_height="136sp"
        android:src="@drawable/portfolio_placeholder"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/tv_jobTitle_rvPortofolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title - Kategori"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tv_date_rvPortofolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Februari 2024"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20sp">

            <TextView
                android:id="@+id/tv_location_rvPortofolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:textColor="@color/grey_40"
                android:gravity="start"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_jobDescription_rvPortofolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet. Ut recusandae fugit quo eaque impedit eum ipsum illo sit animi galisum ut officia voluptate qui quia ducimus?"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>