<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="16sp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:orientation="vertical"
        android:background="#1977F3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loker.In"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftarkan akunmu disini"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular" />
        <ImageView
            android:layout_gravity="end"
            android:layout_height="fill_parent"
            android:layout_width="160dp"
            android:src="@drawable/image_register_page"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="16sp"
        android:background="#FFFFFF">
        <!-- Label for Email Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_regular" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            >
        <EditText
            android:textColor="@color/black"
            android:id="@+id/input_email_registerPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="@drawable/shape_rounded_blue_border"
            android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Label for Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandi"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            app:passwordToggleTint="@color/blue"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/input_password_registerPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:layout_below="@id/description"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Sandi"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorColor="@color/blue"
            app:passwordToggleTint="@color/blue"
            app:passwordToggleEnabled="true">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/input_confirmPassword_registerPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:background="@drawable/shape_rounded_blue_border"
                android:fontFamily="@font/poppins_regular"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register_registerPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@null"
            android:background="@drawable/shape_blue_rounded"
            android:fontFamily="@font/poppins_medium"/>
        <TextView
            android:id="@+id/login_link_registerPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah memiliki akun? Klik disini!"
            android:textSize="12sp"
            android:textColor="#1977F3"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>