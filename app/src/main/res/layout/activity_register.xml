<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_registerPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:paddingRight="16sp"
            android:paddingLeft="16sp"
            android:orientation="vertical"
            android:background="#1977F3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loker.In"
                android:textSize="64sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftarkan akunmu disini"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:padding="16sp"
            android:background="#FFFFFF">
            <!-- Label for Email Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#1977F3"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/blue"
                >
                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/input_email_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_rounded_blue_border"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tv_emailError_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="#F31919"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label for Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textSize="12sp"
                android:textColor="#1977F3"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="10sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/blue"
                app:passwordToggleTint="@color/blue"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/input_password_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:layout_below="@id/description"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_rounded_blue_border"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/tv_passwordError_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="#F31919"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Kata Sandi"
                android:textSize="12sp"
                android:textColor="#1977F3"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="10sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/blue"
                app:passwordToggleTint="@color/blue"
                app:passwordToggleEnabled="true">

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/input_confirmPassword_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_rounded_blue_border"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/tv_passwordConfError_registerPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="#F31919"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_registerError_registerPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text=""
                android:textColor="#F31919"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register_registerPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAFTAR"
                android:textColor="#FFFFFF"
                android:layout_marginTop="2sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:backgroundTint="@null"
                android:background="@drawable/shape_blue_rounded"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:id="@+id/login_link_registerPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah memiliki akun? Klik disini!"
                android:textSize="12sp"
                android:textColor="#1977F3"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_overlay_registerPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        >
        <include layout="@layout/loading_spinner_view" />
    </FrameLayout>

</RelativeLayout>