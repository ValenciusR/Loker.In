<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#1977F3"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back_profilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button_icon"
            android:clickable="true"
            android:layout_marginHorizontal="20sp"/>
        <TextView
            android:id="@+id/tv_viewProfile_profilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingTop="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="20sp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile1_profilePelangganPage"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_no_profile_icon"
                app:shapeAppearanceOverlay="@style/roundedProfileImage" />
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/iv_profile2_profilePelangganPage"
        app:shapeAppearanceOverlay="@style/roundedProfileImage"
        android:src="@drawable/default_no_profile_icon"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30sp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_editProfile_profilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:layout_marginRight="12sp"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_blue_button"
            android:fontFamily="@font/poppins_medium"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_logOut_profilePelangganPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_red_button"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="23sp"
        android:layout_marginVertical="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_name_profilePelangganPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="23sp"
        android:layout_marginVertical="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_phone_profilePelangganPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="081211112222"
            android:gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="23sp"
        android:layout_marginVertical="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_location_profilePelangganPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="South Jakarta"
            android:gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="23sp"
        android:layout_marginVertical="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_email_profilePelangganPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="john.doe@gmail.com"
            android:gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

</LinearLayout>