<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16sp">

        <!-- SECTION : JOB INFORMATION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extrabold"
            android:text="INFORMASI PEKERJAAN"
            android:textColor="@color/darkBlue"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"
            android:layout_marginBottom="16dp" />

        <!-- JOB TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="JUDUL PEKERJAAN"
            android:textColor="#1977F3"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_job_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_blue_border"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_jobError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="KATEGORI"
            android:textColor="#1977F3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_category_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_darkblue_rounded"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:drawableEnd="@drawable/icon_arrow_forward"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Pilih Kategori"
            android:textAllCaps="false" />
        <TextView
            android:id="@+id/tv_categoryError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- DESCRIPTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="DESKRIPSI"
            android:textColor="#1977F3"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_description_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="10sp"
            android:background="@drawable/shape_rounded_blue_border"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top|start"
            android:textAlignment="gravity"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_descriptionError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- SALARY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="UPAH (IDR)"
            android:textColor="#1977F3"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_salary_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_rounded_blue_border"
            android:fontFamily="@font/poppins_regular"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/black" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp">

            <!-- Daily Button -->
            <Button
                android:id="@+id/btn_dailySalary_addJob"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_item_salary_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="HARIAN"
                android:textColor="@drawable/selector_salary_item_salary_txt"
                android:textSize="12sp" />

            <!-- Weekly Button -->
            <Button
                android:id="@+id/btn_weeklySalary_addJob"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_item_salary_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="MINGGUAN"
                android:textColor="@drawable/selector_salary_item_salary_txt"
                android:textSize="12sp" />

            <!-- Monthly Button -->
            <Button
                android:id="@+id/btn_monthlySalary_addJob"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/selector_item_salary_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="BULANAN"
                android:textColor="@drawable/selector_salary_item_salary_txt"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_salaryError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

