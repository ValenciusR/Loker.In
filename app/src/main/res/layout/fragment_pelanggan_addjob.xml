        <!-- SECTION : ADDRESS DETAIL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extrabold"
            android:layout_marginTop="20dp"
            android:text="DETAIL ALAMAT"
            android:textColor="@color/darkBlue"
            android:textSize="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"
            android:layout_marginBottom="16dp"/>

        <!-- PROVINCE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="PROVINSI"
            android:textColor="#1977F3"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/spinner_province_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_blue_border"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/shape_spinner_dropdown_bg"
            android:dropDownVerticalOffset="10dp"
            android:dropDownHorizontalOffset="10dp"
            android:dropDownWidth="match_parent" />
        <TextView
            android:id="@+id/tv_provinceError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- REGENCY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="KOTA / KABUPATEN"
            android:textColor="#1977F3"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/spinner_regency_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_blue_border"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/shape_spinner_dropdown_bg"
            android:dropDownVerticalOffset="0dp"
            android:enabled="false" />
        <TextView
            android:id="@+id/tv_regencyError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- ADDRESS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="ALAMAT"
            android:textColor="#1977F3"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/et_address_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="10sp"
            android:background="@drawable/shape_rounded_blue_border"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top|start"
            android:textAlignment="gravity"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_addressError_addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:background="@drawable/shape_blue_rounded"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="120dp"
            android:text="UNGGAH PEKERJAAN"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>