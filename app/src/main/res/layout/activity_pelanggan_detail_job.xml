<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/toolbar_submain"
        layout="@layout/toolbar_submain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".PelangganDetailJobActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/general_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_jobImage_pelangganDetailJob"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/toolbar_submain"
                        android:src="@drawable/no_image"
                        android:scaleType="fitCenter"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16sp"
                        android:layout_marginHorizontal="16sp"
                        >
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Judul Pekerjaan"
                            android:textColor="#000000"

                            android:textSize="28sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_gravity="center_horizontal" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            >
                            <TextView
                                android:id="@+id/tv_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kategori"
                                android:background="@drawable/shape_blue_rounded"
                                android:textColor="#FFFFFFFF"
                                android:paddingHorizontal="8sp"
                                android:paddingVertical="3sp"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins_medium"
                                />
                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_jobDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Deskripsi pekerjaan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_60"
                        android:layout_marginHorizontal="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16sp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20sp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/date_today"
                            android:layout_marginEnd="10sp"
                            />
                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tanggal"
                            android:layout_marginTop="2sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            >
                            <TextView
                                android:id="@+id/tv_day_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="3sp"
                                android:paddingHorizontal="6sp"
                                android:textSize="10sp"
                                android:background="@drawable/shape_grey_rounded"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Tanggal"

                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20sp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start|center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Tentang Pekerjaan"

                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginStart="10sp"
                                >
                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Status"
                                    android:background="@drawable/shape_rounded_green_pill"
                                    android:textColor="#FFFFFFFF"
                                    android:paddingHorizontal="6sp"
                                    android:paddingVertical="3sp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_medium"
                                    />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginTop="8sp"

                            android:gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/pin"
                                android:layout_marginEnd="10sp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">
                                <TextView
                                    android:id="@+id/tv_province"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lokasi"/>
                                <TextView
                                    android:id="@+id/tv_alamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginTop="8sp"
                            android:layout_marginBottom="16sp"
                            android:gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wallet_alt"
                                android:layout_marginEnd="10sp"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_salary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="gaji / rekuensi" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_main"
                android:text="PELAMAR"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="16sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/poppins_bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_applicants_detailJob"
                android:layout_below="@+id/tv_applicants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_noData_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_applicants_detailJob"
                android:layout_centerHorizontal="true"
                android:text="TIDAK ADA PELAMAR"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginBottom="12sp"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tv_workers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_noData_applicants"
                android:text="PEKERJA"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="16sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/poppins_bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_workers_detailJob"
                android:layout_below="@+id/tv_workers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_noData_workers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_workers_detailJob"
                android:layout_centerHorizontal="true"
                android:text="TIDAK ADA PEKERJA"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_darkblue_rounded"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Ubah"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_blue_rounded"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Aksi"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_red_rounded"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textSize="12sp"
                android:text="Hapus"
                android:gravity="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_rounded"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Ubah"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="8sp"
            android:visibility="gone"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">
        <include layout="@layout/loading_spinner_view" />
    </FrameLayout>

</LinearLayout>
